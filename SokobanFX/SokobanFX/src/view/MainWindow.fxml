 <?import view.SokobanDisplayer?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainWindowController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#loadFileMethod" text="Load Level" />
                  <MenuItem mnemonicParsing="false" onAction="#saveFileMethod" text="Save Level" />
                  <MenuItem mnemonicParsing="false" onAction="#exit" text="Exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <VBox prefHeight="500.0" prefWidth="70.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#exit" prefHeight="0.0" prefWidth="52.0" text="EXIT" textFill="#f81f1f">
               <VBox.margin>
                  <Insets left="10.0" top="350.0" />
               </VBox.margin>
               <font>
                  <Font name="Arial Black" size="13.0" />
               </font>
            </Button>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="timer:">
               <VBox.margin>
                  <Insets left="10.0" top="40.0" />
               </VBox.margin>
               <font>
                  <Font name="Arial Black" size="14.0" />
               </font>
            </Text>
            
            <Text fx:id="myText" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="0">
               <font>
                  <Font name="Arial Black" size="13.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Steps:">
               <font>
                  <Font name="Arial Black" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </Text>
            <Text fx:id="mySteps" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="0">
               <font>
                  <Font name="Arial Black" size="13.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </Text>
         </children>
      </VBox>
   </left>
   <right>
      <VBox prefHeight="500.0" prefWidth="233.0" BorderPane.alignment="CENTER" />
   </right>
   <center>
<SokobanDisplayer fx:id="sd" height="500.0" width="500.0" BorderPane.alignment="CENTER" wall="./resources/Images/wall1.jpg"  character="./resources/Images/character1.png" box="./resources/Images/box.jpg" floor="./resources/Images/floor.jpg" destination="./resources/Images/destination.jpg" open="./resources/Images/open.jpg" over="./resources/Images/over.gif"  />
      
   </center>
   <bottom>
      <Label text="Cart-Ban" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" right="120.0" />
         </BorderPane.margin>
         <font>
            <Font name="Cooper Black" size="36.0" />
         </font>
         <textFill>
            <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
               <stops>
                  <Stop color="#d11313" />
                  <Stop color="BLACK" offset="1.0" />
               </stops>
            </RadialGradient>
         </textFill>
      </Label>
   </bottom>
</BorderPane>
